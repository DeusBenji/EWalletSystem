{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",

  "Jwt": {
    "Issuer": "ApiGateway",
    "Audience": "BachMitID",
    "Key": "CHANGE_IN_ENV"
  },

  "ReverseProxy": {
    "Routes": {
      "mitid-route": {
        "ClusterId": "mitid-cluster",
        "Match": {
          "Path": "/mitid/{**catch-all}"
        },
        "Transforms": [
          {
            "PathRemovePrefix": "/mitid"
          }
        ]
      }
    },
    "Clusters": {
      "mitid-cluster": {
        "Destinations": {
          "mitid-api": {
            "Address": "http://localhost:5246/"
          }
        }
      }
    }
  }
}
