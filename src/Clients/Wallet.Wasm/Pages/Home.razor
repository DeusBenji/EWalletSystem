@page "/"
@using Wallet.Wasm.Services
@using Wallet.Wasm.Models
@inject AuthClient AuthClient
@inject WalletStorage WalletStorage
@inject NavigationManager Nav

<PageTitle>Home</PageTitle>

<div class="row justify-content-center">
    <div class="col-md-7 col-lg-6">
        <div class="card shadow-sm mt-4">
            <div class="card-header bg-dark text-white">
                <h4 class="mb-0">E-Wallet</h4>
            </div>

            <div class="card-body">
                @if (_checking)
                {
                    <p class="text-muted mb-0">Checking session…</p>
                }
                else if (_alreadyLoggedIn)
                {
                    <div class="alert alert-success">
                        You are already logged in.
                    </div>

                    <div class="d-grid gap-2">
                        <button class="btn btn-primary" @onclick="GoToWallet">Go to My Wallet</button>
                        <button class="btn btn-outline-secondary" @onclick="Logout" disabled="@_busy">Log out</button>
                    </div>
                }
                else
                {
                    <p class="text-muted small">
                        Log in to access your wallet. If you don’t have an account yet, sign up first.
                    </p>

                    @if (!string.IsNullOrWhiteSpace(_error))
                    {
                        <div class="alert alert-danger">
                            <small>@_error</small>
                        </div>
                    }

                    <EditForm Model="_model" OnValidSubmit="HandleLogin">
                        <DataAnnotationsValidator />
                        <ValidationSummary />

                        <div class="mb-3">
                            <label class="form-label">Email</label>
                            <InputText class="form-control" @bind-Value="_model.Email" placeholder="name@example.com" />
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Password</label>
                            <InputText type="password" class="form-control" @bind-Value="_model.Password" placeholder="Password" />
                        </div>

                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-primary" disabled="@_busy">
                                @(_busy ? "Logging in…" : "Log in")
                            </button>

                            <button type="button" class="btn btn-outline-success" @onclick="GoToSignup" disabled="@_busy">
                                Sign up
                            </button>
                        </div>
                    </EditForm>
                }
            </div>
        </div>
    </div>
</div>

@code {
    private LoginModel _model = new();

    private bool _busy;
    private bool _checking = true;
    private bool _alreadyLoggedIn;
    private string _error = "";

    protected override async Task OnInitializedAsync()
    {
        _alreadyLoggedIn = await WalletStorage.IsLoggedInAsync();
        _checking = false;
    }

    private async Task HandleLogin()
    {
        _busy = true;
        _error = "";

        try
        {
            var (success, accountId, error) =
                await AuthClient.LoginAsync(_model.Email, _model.Password);

            if (!success)
            {
                _error = string.IsNullOrWhiteSpace(error) ? "Login failed." : error;
                return;
            }

            await WalletStorage.SetAccountIdAsync(accountId);

            // Efter login: send brugeren til wallet
            Nav.NavigateTo("/wallet");
        }
        catch (Exception ex)
        {
            _error = ex.Message;
        }
        finally
        {
            _busy = false;
        }
    }

    private void GoToSignup() => Nav.NavigateTo("/signup");
    private void GoToWallet() => Nav.NavigateTo("/wallet");

    private async Task Logout()
    {
        _busy = true;
        try
        {
            await WalletStorage.LogoutAsync(clearTokens: true);
            _alreadyLoggedIn = false;
            _model = new LoginModel();
        }
        finally
        {
            _busy = false;
        }
    }
}
