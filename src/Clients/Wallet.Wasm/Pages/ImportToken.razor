@page "/wallet/import"
@using Wallet.Wasm.Services
@inject NavigationManager Nav
@inject WalletService WalletService
@inject IJSRuntime JS

<PageTitle>Import Identity Token</PageTitle>

<div class="row justify-content-center">
    <div class="col-md-8 col-lg-6">
        <div class="card shadow-sm mt-4">
            <div class="card-header bg-primary text-white">
                <h4 class="mb-0">Import Identity Token</h4>
            </div>
            <div class="card-body text-center">
                <p class="mb-4">
                    To issue a secure identity token to your wallet, you must verify your identity using <strong>MitID</strong>.
                </p>

                <div class="alert alert-info text-start">
                    <small>
                        <i class="bi bi-info-circle-fill me-2"></i>
                        This will redirect you to the official MitID authentication page.
                        After verification, your credential will be issued.
                    </small>
                </div>

                <div class="d-grid gap-2 col-8 mx-auto mt-4">
                    <a href="http://localhost:7004/auth/login" class="btn btn-lg btn-primary shadow-sm hover-elevate">
                        <span class="bi bi-person-badge me-2"></span>
                        Log in with MitID
                    </a>
                </div>

                <div class="mt-4 text-muted small">
                    <p>Issues? Ensure you have <a href="/signup">created an account</a> first.</p>
                </div>
            </div>
        </div>
    </div>
</div>

@code {
    // No code needed, simple redirect link.
}
